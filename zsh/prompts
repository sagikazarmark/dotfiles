terraform_workflow(){
    # dont show 'default' workspace in home dir
    [[ "$PWD" == ~ ]] && return

    # check if in terraform dir
    if [ -d .terraform ]; then
        local workspace=$(terraform workspace show 2> /dev/null) || return
        local color='%K{magenta}%F{white}'
        echo -n "%B$workspace%b"
    fi
}
