# Basic file aliases
alias ll="ls -halF"
alias la="ls -A"
alias l="ls -CF"
alias rmdot="rm -rf .[!.]*"

# Find my IP address
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"

# Edit hosts file
alias ehost='sudo $EDITOR /etc/hosts'

# Find a running process and exclude the actual one
alias pu="ps aux | grep -v grep | grep"

# Restart SHELL
alias rs='exec $SHELL'

# Pretty print JSON
alias jpl="python -m json.tool | pygmentize -l json"

# Convert an image to favicon
alias favico="convert -resize x32 -gravity center -crop 32x32+0+0 -flatten -colors 256 -background transparent"

# Open a path in the chosen GUI editor
alias edit='$GUIEDITOR'




alias testssl='docker run -it -v "$(pwd)":/workdir -w /workdir quay.io/jumanjiman/testssl "$@"'
